{
  "name": "shooting-dom",
  "version": "1.0.0",
  "description": "shooting game made by dom.",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development webpack-dev-server --mode development --hot",
    "watch": "NODE_ENV=development webpack --mode development -w",
    "bundle:dev": "NODE_ENV=development webpack --mode development",
    "bundle:prd": "NODE_ENV=production webpack --mode production",
    "build": "npm-run-all bundle:dev",
    "release": "npm-run-all bundle:prd",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint ./client/js",
    "format": "prettier-eslint --write \"client/js/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nabeliwo/shooting-dom.git"
  },
  "author": "nabeliwo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nabeliwo/shooting-dom/issues"
  },
  "homepage": "https://github.com/nabeliwo/shooting-dom#readme",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-react": "^7.0.0-beta.46",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^8.0.0-beta.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "npm-run-all": "^4.1.3",
    "prettier-eslint-cli": "^4.7.1",
    "react-hot-loader": "^4.1.2",
    "webpack": "^4.7.0",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  }
